<div class="container-login">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <div class="sign-wrapper">
      <div class="row">
        <div class="sign-header text-center">
          <h2>Change your password</h2><hr>
        </div>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <div class="row">
          <%= f.error_notification %>
          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <div class="form-inputs">
            <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>
          </div>
        </div>
        <div class="form-actions">
          <button action="submit" class="sign-button">Change my password</button>
          <div class="form-actions-links">
            <div class="row">
              <div class="col-xs-6 text-center">
                <%= link_to 'Log-in', new_sessions_path(resource_name) %>
              </div>
              <div class="col-xs-6 text-center">
                <%= link_to 'Sign-up', new_user_registration_path %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
